{% if imageUrl or imageFA %}
  {% set imageHeight = imageHeight if imageHeight else "50px" %}
  {% if imageUrl %}
    <img src="{{ imageUrl }}" height="{{ imageHeight }}" style="margin-bottom: 10px;"/>
  {% else %}
    <span class="bright fa fa-{{ imageFA }}" style='margin-bottom: 10px; font-size: {{ imageHeight }};'/></span>
  {% endif %}
  &nbsp;
{% endif %}
{% if title %}
  <span class="thin dimmed slarge">{{ title }}</span>
{% endif %}
{% if message %}
  {% if title %}
    <br/>
  {% endif %}
  <span class="light bright medium">{{ message }}</span>
{% endif %}
